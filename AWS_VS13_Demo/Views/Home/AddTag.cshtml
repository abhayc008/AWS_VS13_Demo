@model AWS_VS13_Demo.Models.AddTag

@{
    ViewBag.Title = "Add Tag";
}

@using (Html.BeginForm()) {
   
    
    <fieldset>
        <legend>Add Tag</legend>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.BucketName)
            </div>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.BucketName, new SelectList(ViewBag.Buckets, "BucketName", "BucketName"), new {@class="form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
               @Html.LabelFor(model => model.key, new { @class = "form-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.key, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.value, new { @class = "form-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.value, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row ">
            <input type="submit" value="Create" style="width:auto;" class="btn btn-info col-sm-6" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
